{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "avr-simulator-rs",
  "version": "0.1.0",
  "identifier": "com.Lazox12.avr-simulator",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../src-fe/dist"
  },
  "app": {
    "windows": [
      {
        "title": "avr-simulator-rs",
        "width": 800,
        "height": 600,
        "label": "main"
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": ["deb","rpm","msi","nsis"],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "sql/*"
    ],
    "windows": {
      "nsis": {
        "template": "scripts/install-vcredist.nsh"
      },
      "webviewInstallMode": {
        "type": "downloadBootstrapper"
      }
    }
  }
}
